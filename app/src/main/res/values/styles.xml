<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InformationTextField">
        <item name="android:background">@drawable/background_text_field_common</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CommonButton">
        <item name="android:gravity">center</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/commonButtonBackground</item>
        <item name="android:textAppearance">@style/ButtonTitle</item>
    </style>

    <style name="StructureItemTitle">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Title">
        <item name="android:textSize">20sp</item>

    </style>

    <style name="BodyText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonTitle">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
